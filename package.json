{
  "name": "@goforms/ui",
  "version": "0.1.0",
  "description": "Custom UI framework for GoForms",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx,.css",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css}\"",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "goforms",
    "ui",
    "framework",
    "css",
    "forms",
    "lit",
    "web-components"
  ],
  "author": "GoForms Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/node": "^22.15.21",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "eslint": "^9.27.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "lit": "^3.3.0"
  }
}
